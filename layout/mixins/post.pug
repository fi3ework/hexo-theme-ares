mixin postInfo(item)
    .post-info
        != full_date(item.date, 'MM/DD')
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from, target='_blank', title=item.from)
                != __('translate_original')

        //- - item.tags.forEach(tag=> {
        //-      span= '# ' + tag.name
        //- - })

mixin postTitle(title)
    if title
        != title
    else
        != __('untitled')

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href=url_for(item.path))
                            +postTitle(item.title)
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href=url_for(item.path))
                        != __('read_more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var isFirstSectionUsed = false
        - var year = 0;
        - var change = false;
        - site.posts.each(function (item, index) {
            - var itemYear = date(item.date, 'YYYY') - 0
            - change = year !== itemYear
            - year = itemYear
            if change
                if (!isFirstSectionUsed) 
                    - isFirstSectionUsed = true
                else
                    | </section>
                | <section class="year-section">

                h2.archive-year
                    != itemYear
            - var tagArray = (item.tags.map(function(tag){return tag.name}))
            - var currTagList = tagArray.join('%+%');
            div(class='post-item', data-tags = currTagList)
                +postInfo(item)
                a.post-title-link(href=url_for(item.path))
                    +postTitle(item.title)
            
            if (index === site.posts.length - 1)
                | </section>
        - })

mixin tagList()
    .tags
        div.tag(data-tag = '')
            | ALL POSTS
            span.tagCount.
                !{site.posts.length}
        - site.tags.each(tag=>{
            div.tag(data-tag = tag.name)
                =tag.name
                span.tagCount
                    =tag.posts.length
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                +postTitle(item.title)
            +postInfo(item)
            .post-content
                != item.content